<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_dice"
        android:layout_width="@dimen/margin_5"
        android:layout_height="@dimen/margin_5"
        android:layout_marginStart="@dimen/margin_4"
        android:layout_marginVertical="@dimen/margin_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dice_1"
        android:contentDescription="@string/dice_result_image_description" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="@string/empty_string"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/iv_dice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_dice"
        app:layout_constraintTop_toTopOf="@+id/iv_dice" />
</androidx.constraintlayout.widget.ConstraintLayout>